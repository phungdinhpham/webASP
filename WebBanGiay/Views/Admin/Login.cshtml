
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin Login</title>
    <link rel="shortcut icon" href="~/Content/giayy/img/Webiconset-Application-Register (1).ico" />
    <link rel="stylesheet" href="~/Content/giayy/loginAD/css/style.css">

</head>
<body>
    <div class="ad">--Xác nhận thông tin Admin--</div>
    <div class="wrapper">
        <div class="container">
            <h1>Xin chào!</h1>
            <h2>ADMIN</h2>
            <h4 style="color:red; text-align:center">@ViewBag.Thongbao</h4>
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
                <form class="form">

                    <input type="text" name="username" placeholder="Tên đăng nhập @ViewData["userError"]" />


                    <input type="password" name="password" placeholder="Mật khẩu @ViewData["passError"]" />

                    <button type="submit">Đăng nhập</button>
                </form>
            }
            <form class="form">
                <h3>Tài khoản của bạn không đăng nhập được ?  </h3>
                <a href="~/NguoiDung/Dangnhap">>>Bấm vào đây<<</a>
                <br />
            </form>



        </div>

        <ul class="bg-bubbles">
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
        </ul>
    </div>
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>

    <script src="~/Content/giayy/loginAD/js/index.js"></script>


</body>
</html>
